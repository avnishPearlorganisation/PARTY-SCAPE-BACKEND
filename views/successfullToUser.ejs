<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        section {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            margin: 20px;
            padding: 20px;
            max-width: 600px;
            width: 100%;
        }

        h2 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
        }

        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #666;
        }

        input {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .thank-you {
            text-align: center;
            margin-top: 20px;
            font-size: 18px;
            color: #4caf50;
        }

        .addons-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .addon {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin: 10px;
            padding: 15px;
            width: 200px;
            text-align: center;
        }

        .addon img {
            max-width: 100%;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .addon p {
            margin: 0;
            font-size: 16px;
            color: #333;
        }
    </style>
</head>

<body>
    <!-- Booking Information Section -->
    <section>
        <h2>Booking Information</h2>
        <form>
            <label for="number">Booking Id:</label>
            <input type="tel" id="number" name="number" value="<%= mailData?._id %>">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= mailData?.bookedBy?.name %>">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= mailData?.bookedBy?.email %>">
            <label for="theater">Theater:</label>
            <input type="text" id="theater" name="theater" value="<%= mailData?.theater?.theaterName %>">
            <label for="theater">Slot:</label>
            <input type="text" id="theater" name="theater" value="<%= mailData?.theater?.theaterName %>">
            <label for="number">Number:</label>
            <input type="tel" id="number" name="number" value="<%= mailData?.bookedBy?.whatsappNumber %>">
            <label for="cake">Cake:</label>
            <input type="text" id="cake" name="cake" value="<%= mailData?.cake?.name %>">
            <label for="ceremony">Ceremony:</label>
            <input type="text" id="ceremony" name="ceremony" value="<%= mailData?.ceremonyType?.type %>">
            <label for="price">Remaining price:</label>
            <input type="text" id="price" name="price" value="<%= mailData?.remainingPrice%>">
        </form>
    </section>

    <!-- Add-ons Section -->
    <section>
        <h2>Add-ons</h2>
        <div class="addons-container">
            <% mailData.addOns.forEach(function(addOn) { %>
                <div class="addon">
                    <img src="<%= addOn.img %>" alt="<%= addOn.title %>">
                    <p><strong>
                            <%= addOn.title %>
                        </strong><br>$<%= addOn.price %>
                    </p>
                </div>
                <% }); %>
        </div>
    </section>
    <div class="thank-you">
        <p>Thank you for choosing Partyscape. We look forward to hosting your event!</p>
    </div>
</body>

</html>